rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is Admin
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    // Helper function to check if user is Owner
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // USERS COLLECTION
    match /users/{userId} {
      allow read, create: if request.auth != null;
      allow update, delete: if isAdmin();
      allow update: if isOwner(userId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['displayName', 'photoURL']);
    }

    // CASES COLLECTION
    match /cases/{caseId} {
      // Admins have full access
      allow read, write: if isAdmin();
      
      // Users can read if published. 
      // Note: Ideally, we would strictly check 'assignedCaseIds' here, but accessing the User doc 
      // for every Case doc read can be expensive/complex in Rules. 
      // For now, we trust the Client to filter, but enforce 'published' status for safety.
      allow read: if request.auth != null && resource.data.status == 'published';
    }
    // GAME RESULTS COLLECTION
    match /game_results/{resultId} {
      allow read, write: if request.auth != null;
    }

    // SYSTEM CONFIG
    match /system_config/{configId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
